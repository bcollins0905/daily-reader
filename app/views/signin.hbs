form {


    position: center;


}

input[type=text], input[type=password] {
    width: 30%;
    padding: 12px 20px;
    margin: 8px 0;
    display: inline-block;
    border: 1px solid #ccc;
    box-sizing: border-box;
    position: center;
    font-size: 50%;


}
.container {
    padding: 16px;
}

.error_message {
	color: #AA2020;
	font-size: 120%;
	border: 2px;
}


.btn {
    background-color: #4CAF50;
    color: white;
    padding: 14px 20px;
    margin: 8px 0;
    border: none;
    cursor: pointer;
    width: 24%;
    margin-left: 160px;
    font-size:80%;
}

</style>

</head>

<body>


	<form id="signin" name="signin" method="post" action="authenticate_email">
		<div class="container">
		<label for="email"> E-mail Address: </label>
		<input class="text" name="email" type="text" />
		<br>
		<label for="password"> Password: </label>
		<input class="password" type="password" name="password" />
		<br>
		</div>
		<input class="btn" type="submit" value="Sign In" />
	</form>

	<div class="error_message"> {{message}} </div>

</body>

</html>
